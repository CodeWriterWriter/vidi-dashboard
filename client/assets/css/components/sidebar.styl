--------------------------------------------------------------------*/

aside
  position: absolute
  left: 0
  top: 69px
  height: 100vh
  width: 200px
  background-color: $blue-darker
  
nav li:not(:last-child)
  border-bottom: 1px solid lighten($blue-darker, 20%)
  
.nav-item
  display: block
  padding: $ui-spacing-half $ui-spacing
  color: white
  transition: all .3s ease-in
  
  &:hover
    background-color: $blue-dark